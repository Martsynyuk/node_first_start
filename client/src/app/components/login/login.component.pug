div.conteiner.col-md-4.col-md-offset-3
  h1 Sign Up
  form.col-md-8
    div.form-group
      label(for='name') * Name :
      input#name.form-control([(ngModel)]='user.name' type='text' name='name')

    div.form-group
      label(for='email') * Email :
      input#email.form-control([(ngModel)]='user.email' type='text' name='email')

    div.form-group
      label(for='password') * Password :
      input#password.form-control([(ngModel)]='user.password' type='password' name='password')

    button.btn.btn-success( type='submit' "(click)"="addUser()") Submit
