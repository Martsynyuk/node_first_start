div.conteiner.col-md-4.col-md-offset-3
  h1 Sign Up
  form.col-md-8([formGroup]="regForm")
    .form-group
      label(for='name') * Name :
      input#name.form-control([(ngModel)]='user.name'  type='text' name='name' formControlName='user_name')
    .alert.alert-danger(*ngIf="regForm.controls['user_name'].invalid") name required

    .form-group
      label(for='email') * Email :
      input#email.form-control([(ngModel)]='user.email' type='text' name='email' formControlName='user_email')
    .alert.alert-danger(*ngIf="regForm.controls['user_email'].invalid") email  requred

    .form-group
      label(for='password') * Password :
      input#password.form-control([(ngModel)]='user.password' type='password' name='password' formControlName='user_password')
    .alert.alert-danger(*ngIf="regForm.controls['user_password'].invalid") password required

    .form-group
      label(for='confirm_password') * Confirm password :
      input#confirm_password.form-control([(ngModel)]='user.confirm_password' type='password' name='confirm_password' formControlName='user_confirm_password')
    .alert.alert-danger(*ngIf="regForm.controls['user_confirm_password'].invalid") confirm password required

    button.btn.btn-success(type='submit' "[disabled]"="regForm.invalid" "(click)"="addUser()") Submit
